{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Launch Client",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/out/client/*"]
    },
    {
      "name": "Debug Server",
      "type": "node",
      "request": "attach",
      "port": 6004,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/out/server/*"]
    }
  ]
}
